
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/table">
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:gravity="center"
        >
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/btn00"
            android:tag="00"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/btn01"
            android:tag="01"
        />
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/btn02"
            android:tag="02"
        />
    </TableRow>
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:gravity="center"
        >
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/btn10"
            android:tag="10"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/btn11"
            android:tag="11"
        />
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/btn12"
            android:tag="12"
        />
    </TableRow>
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:gravity="center"
        >
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/btn20"
            android:tag="20"
        />
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/btn21"
            android:tag="21"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/btn22"
            android:tag="22"
        />
    </TableRow>

</TableLayout>